<%= field_set_tag nil, class: 'creature-photo-fields row-fluid nested-form-hidden-label nested-fields' do %>
  <%= f.input :source, required: false, wrapper_html: { class: 'span6' }, input_html: { class: 'span12' } %>
  <div class="control-group span2">
    <%= f.input :source_cache, as: :hidden %>
    <%= image_tag(f.object.source.thumb.url) if f.object.source? %>
  </div>
  <%= f.input :remove_source, wrapper_html: { class: 'span2' }, input_html: { class: 'span12' } do
    f.check_box :remove_source
  end %>
  <div class="control-group actions span2">
    <%= iconed_link_to_remove_association nil, f %>
  </div>
<% end %>
