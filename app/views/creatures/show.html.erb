<article>
  <header>
    <h1><%= @creature.popular_name %></h1>
  </header>

  <%= render_list class: 'nav nav-tabs' do |li|
    li << [link_to(t('helpers.index'), creatures_path), { class: 'action' }]
    li << [link_to(t('helpers.edit'), [:edit, @creature]), { class: 'action' }]
  end %>

  <div>
    <%= render 'creature', creature: @creature %>
  </div>

  <footer>
  </footer>
</article>
